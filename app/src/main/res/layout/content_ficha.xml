<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cl.emprz.chiloeapp.Ficha"
    tools:showIn="@layout/activity_ficha">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp">

<!--            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:alpha="0.8">-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:id="@+id/map_ficha"
                                    tools:context=".Ficha"
                                    android:name="com.google.android.gms.maps.SupportMapFragment"
                                    android:layout_marginTop="10dp" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:visibility="gone">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="30dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_column="0"
                                android:layout_weight="1"
                                android:background="#335698">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Av. Juan Ladrilleros #777"
                                    android:id="@+id/textView10"
                                    android:layout_gravity="center_horizontal|bottom"
                                    android:textColor="@color/texto" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/imageView9"
                                    android:src="@drawable/home_grey_96x96"
                                    android:layout_gravity="center_horizontal|top" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:background="#fd6363">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/imageView10"
                                    android:src="@drawable/phone_grey_96x96"
                                    android:layout_gravity="center_horizontal|top" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="+569 96957739"
                                    android:id="@+id/textView11"
                                    android:layout_gravity="center_horizontal|bottom"
                                    android:textColor="@color/texto" />
                            </FrameLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_column="0"
                                android:layout_weight="1"
                                android:background="#fd6363" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="www.mihotelcito.com"
                                    android:id="@+id/textView12"
                                    android:layout_gravity="center_horizontal|bottom"
                                    android:textColor="@color/texto" />

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/imageView11"
                                    android:src="@drawable/web_grey_96x96"
                                    android:layout_gravity="center_horizontal|top" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_column="1"
                                android:layout_weight="1"
                                android:background="#335698" >

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/imageView12"
                                    android:src="@drawable/email_grey_96x96"
                                    android:layout_gravity="center_horizontal|top" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="miempresa@miempresita.com"
                                    android:id="@+id/textView13"
                                    android:layout_gravity="center_horizontal|bottom"
                                    android:textColor="@color/texto" />
                            </FrameLayout>
                        </TableRow>

                    </TableLayout>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:background="@android:color/darker_gray"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imageView2"
                            android:src="@drawable/home_grey_96x96"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Av. Juan Ladrilleros #777"
                            android:id="@+id/textView7"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imageView3"
                            android:src="@drawable/email_grey_96x96"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="miempresa@miempresita.com"
                            android:id="@+id/textView8"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imageView"
                            android:src="@drawable/phone_grey_96x96"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+569 96957739"
                            android:id="@+id/textView6"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/imageView4"
                            android:src="@drawable/web_grey_96x96"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="www.mihotelcito.com"
                            android:id="@+id/textView9"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>
                </LinearLayout>

            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />
            <!--</android.support.v7.widget.CardView>-->

<!--            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:alpha="0.8">-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="DESCRIPCION"
                android:id="@+id/textView"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp" />
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/large_text"
                    android:textSize="16dp"
                android:layout_marginTop="10dp" />

            <!--</android.support.v7.widget.CardView>-->

        </LinearLayout>

    </FrameLayout>



</android.support.v4.widget.NestedScrollView>